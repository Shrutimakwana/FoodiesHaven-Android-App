<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/form_background"
        android:padding="20dp"
        android:layout_gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us!"
            android:textAlignment="center"
            android:textColor="@color/dark_orange"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:contentDescription="Contact form title" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We would love to hear from you!"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Subtitle for contact form" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:inputType="textPersonName" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email Address"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:inputType="textEmailAddress" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Message"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:inputType="textMultiLine"
            android:minHeight="100dp"
            android:gravity="top"
            android:scrollbars="vertical" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/gradient_button_orange"
            android:textColor="#FFF"
            android:padding="14dp"
            android:layout_marginTop="16dp"
            android:elevation="6dp"
            android:contentDescription="Submit button for contact form" />

    </LinearLayout>
</ScrollView>
