    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/form_background"
        android:padding="20dp"
        android:layout_gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textColor="@color/dark_orange"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:contentDescription="Welcome Title" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Subtitle for registration form" />

        <!-- Inputs -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

        <EditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:background="@drawable/rounded_edittext_orange"
            android:padding="14dp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

        <!-- Login Navigation -->
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log In"
            android:textColor="@color/dark_orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:contentDescription="Navigate to login screen" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Now"
            android:background="@drawable/gradient_button_orange"
            android:textColor="#FFF"
            android:padding="14dp"
            android:layout_marginTop="16dp"
            android:elevation="6dp"
            android:contentDescription="Register button for creating account" />

    </LinearLayout>
</ScrollView>
