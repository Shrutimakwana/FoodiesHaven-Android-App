<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Horizontal Image Slider -->
        <HorizontalScrollView
            android:id="@+id/sliderScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/sliderContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Categories Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” Categories"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="#333"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeCategoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Best Foods Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒŸ Best Foods"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="#333"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bestFoodsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- About Us Section with CardView -->
        <!-- About Us Section with CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            android:padding="20dp"
            android:backgroundTint="#FFFFFF"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <!-- Icon and Header -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo"
                    android:contentDescription="FoodiesHaven Logo"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Foodie's Haven!"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/aboutText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your one-stop destination for delicious food! From mouth-watering pizzas ðŸ• to juicy burgers ðŸ”, we bring you the best flavors with fresh ingredients and quick delivery. Order now and experience a food journey like never before!"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/darkGrey"
                    android:paddingTop="8dp"
                    android:textAlignment="center"/>

                <!-- Call to Action Button -->
                <Button
                    android:id="@+id/exploreMenuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Menu"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/orange"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:gravity="center"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foodie's Haven Â© 2025 by Shruti Makwana"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow us on"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:textColor="#666"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/whatsappIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/whatsapp"
                    android:padding="8dp"
                    android:contentDescription="WhatsApp"/>

                <ImageView
                    android:id="@+id/instagramIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/instagram"
                    android:padding="8dp"
                    android:contentDescription="Instagram"/>

                <ImageView
                    android:id="@+id/gmailIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gmail"
                    android:padding="8dp"
                    android:contentDescription="Gmail"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy | Terms &amp; Conditions"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#888"
                android:paddingTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
